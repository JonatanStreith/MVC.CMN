@model MVC.CMN.Models.Postitem

<tr>
    <td>











        <div class="border rounded col-12 no-padding" style="background:blue;" id="@Model.Id">

            <div class="cell-header col-12">
                <p class="no-margin text-info">
                    Make title appear here
                </p>
            </div>

            <div class="d-flex cell-content col-12 flex-wrap">
                <div class="col-11 no-padding">
                    <p class="no-margin">
                        @Model.Content
                    </p>


                    <p class="text-right small no-margin">
                        Written by @Model.Author on InsertDateHere
                    </p>
                </div>

                <div class="col-1 no-padding">
                    <p class="text-right small no-margin">
                        @Html.ActionLink("Edit post", "EditPost", "Home", new { id = Model.Id }, null)
                        <br />
                        @Html.ActionLink("Delete post", "DeletePost", "Home", new { id = Model.Id }, null)
                    </p>
                </div>
            </div>

            <div class="cell-footer col-12">
                <p class="no-margin">
                    Footer info
                </p>

            </div>
        </div>








    </td>




</tr>
