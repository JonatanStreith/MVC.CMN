@model MVC.CMN.Models.MessageBoard.NewBoardViewModel

@using (Html.BeginForm("CreateNewBoard", "MessageBoard", new { userId = Model.UserId }, FormMethod.Post))
{

    <textarea rows="1" cols="50" class="form-control col-12" id="NewBoardTitle" name="boardtitle" placeholder="Board title"></textarea>

    <br />

    <textarea rows="10" cols="50" class="form-control col-12" id="NewPostInput" name="boardcontent"></textarea>

    <br />
    <input type="submit" class="btn btn-primary" value="New board">
}
