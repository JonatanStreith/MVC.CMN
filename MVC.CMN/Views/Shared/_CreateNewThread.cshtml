@model MVC.CMN.Models.MessageBoard.NewThreadViewModel

@using (Html.BeginForm("CreateNewThread", "MessageBoard", new
{
    boardId = Model.BoardId,
    userId = Model.UserId
}, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <textarea rows="1" cols="50" class="form-control col-12" id="NewThreadTitle" name="threadtitle" placeholder="Thread title"></textarea>

    <br />

    <textarea rows="10" cols="50" class="form-control col-12" id="NewPostInput" name="threadcontent"></textarea>

    <br />
    <input type="submit" class="btn btn-primary" value="New thread">
}
