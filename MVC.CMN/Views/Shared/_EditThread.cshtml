@model MVC.CMN.Models.MessageBoard.EditThreadViewModel

@using (Html.BeginForm("EditThread", "MessageBoard", new { threadId = Model.ThreadId, boardId = Model.BoardId, userId = Model.UserId }, FormMethod.Post))
{



    <textarea rows="1" cols="50" class="form-control col-12" id="NewThreadTitle" name="threadtitle">@Model.Subject</textarea>


    <br />

    <input type="submit" class="btn btn-primary" value="Edit">

}
