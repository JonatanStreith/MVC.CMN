@model MVC.CMN.Models.Boarditem

@{
    ViewBag.Title = "SingleBoard";
}

@Html.Partial("_Carousel")


<div class="d-flex border border-dark rounded flex-column col-10 mx-auto no-padding">
    <div class="col-12 gradient-steelblue">
        @Model.Title
    </div>

    <div class="col-12 gradient-white">
        @Model.Description
    </div>
</div>
<br />
<div class="d-flex border border-dark rounded flex-column col-10 mx-auto no-padding">

    <div class="d-flex flex-row gradient-blue">
        <div class="col-8">
            <p class="small no-margin">
                Topics
            </p>
        </div>

        <div class="col-1">
            <p class="small no-margin">
                Threads
            </p>
        </div>

        <div class="col-1">
            <p class="small no-margin">
                Posts
            </p>
        </div>
        <div class="col-2">
            <p class="small no-margin">
                Last post
            </p>
        </div>


    </div>


    <table class="col-12 mx-auto">

        @{
            foreach (var thread in Model.Threads)
            {

                @Html.Partial("_ThreadCell", thread)

            }
        }
    </table>
</div>

<hr />

<div class="form-group col-6 mx-auto p-2">
    @using (Html.BeginForm("CreateNewThread", "Home", FormMethod.Post))
    {
        <input type="text" class="form-control col-12" id="NewThreadTitle" name="title" placeholder="Thread title">
        <br />

        <textarea rows="10" cols="50" class="form-control col-12" id="NewPostInput" name="content"></textarea>

        <br />
        <input type="submit" class="btn btn-primary" value="New thread">
    }
</div>





<div>
    <ul class="breadcrumb">
        <li><a href="#">Main</a></li>
        <li><a href="#">@Model.Title</a></li>
    </ul>
</div>


