@model MVC.CMN.Models.MessageBoard.Thread

<tr>
    <td>
        <div class="col-12 no-padding standard-cell" id="@Model.ThreadId">
            <div class="d-flex cell-header col-12">
                <div class="no-padding text-info col-9">
                    @Html.ActionLink(Model.Subject, "ShowThread", "MessageBoard", new { id = Model.ThreadId }, null)
                </div>
                <div class="text-right small no-padding col-3">
                    @*//TODO: Get the name from userprofile/createdby*@
                    Written by @Model.CreatedBy on InsertDateHere
                </div>
            </div>
            <div class="d-flex cell-content col-12 flex-wrap">
                <div class="col-10 no-padding">
                    <p class="no-margin">
                        @*@Model.Posts.FirstOrDefault().Content*@
                        INSERT POSTS MODEL HERE
                    </p>
                </div>
                <div class="col-2 no-padding">
                    <p class="text-right small no-margin">
                        @*//TODO: Get the name from userprofile/createdby*@
                        @Model.CreatedBy
                        <br />
                        Author info here
                    </p>
                </div>
            </div>
            <div class="cell-footer col-12">
                <p class="text-right small no-margin">
                    @Html.ActionLink("Edit thread", "EditThread", "Home", new { id = Model.ThreadId }, null)

                    @Html.ActionLink("Delete thread", "DeleteThread", "Home", new { id = Model.ThreadId }, null)
                </p>
            </div>
        </div>
    </td>
</tr>