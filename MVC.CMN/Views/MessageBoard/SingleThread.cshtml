@model MVC.CMN.Models.MessageBoard.Thread

@{
    ViewBag.Title = "SingleThread";
}

<div>
    <ul class="breadcrumb">
        <li><a href="#">Main</a></li>
        <li><a href="#">GetParentName</a></li>
        <li><a href="#">@Model.Subject</a></li>
    </ul>
</div>

<div class="d-flex border border-dark rounded flex-column col-10 mx-auto no-padding">
    <div class="col-12 gradient-orange">
        <h3>@Model.Subject    </h3>
    </div>
    <table>
        @{
            foreach (var post in Model.Posts) {

                @Html.Partial("_PostCell", post)

            }
        }
    </table>
</div>
<hr />
<div class="form-group col-6 mx-auto p-2">
    @using (Html.BeginForm("CreateNewPost", "Home", FormMethod.Post)) {
        <textarea rows="10" cols="50" class="form-control col-12" id="NewPostInput" name="content"></textarea>
        <br />
        <input type="submit" class="btn btn-primary" value="Reply">
    }
</div>